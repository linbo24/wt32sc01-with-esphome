# ============================================
# secrets.yaml – Beispieldatei
# ============================================
# Kopiere diese Datei nach secrets.yaml und
# trage deine echten Werte ein:
#
#   cp secrets.yaml.example secrets.yaml
#
# secrets.yaml wird per .gitignore NICHT committed.
# ============================================

# Home Assistant API-Schlüssel (Base64, 32 Byte)
# Generieren: https://esphome.io/components/api.html
ha_defaultkey: "DEIN_BASE64_API_KEY_HIER"

# ESPHome OTA-Passwort
esphome_ota_pw: "dein_ota_passwort"

# WiFi-Zugangsdaten
wifi_ssid_iot: "DEIN_WLAN_NAME"
wifi_pw_iot: "DEIN_WLAN_PASSWORT"

# Statische IP-Konfiguration
ip_saegesteuerung: "192.168.1.100"
ip_iot_gateway: "192.168.1.1"
ip_iot_subnet: "255.255.255.0"
ip_iot_dns: "192.168.1.1"

# Fallback-Hotspot Passwort
esphome_fb_pw: "fallback_passwort"
